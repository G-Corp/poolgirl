{erl_opts, [debug_info, warn_export_vars, warn_shadow_vars, warn_obsolete_guard]}.

{plugins, [
           {rebar3_elixir, {git, "https://github.com/botsunit/rebar3_elixir.git", {branch, "master"}}},
           rebar3_hex]}.

{elixir_bindings, [{poolgirl, [{except, [start_link
                                         , init
                                         , handle_call
                                         , handle_cast
                                         , handle_info
                                         , terminate
                                         , code_change]}]}]}.

{deps, []}.

{eunit_opts, [
              verbose, {report, {eunit_surefire, [{dir, "test/eunit"}]}}
             ]}.
{pre_hooks, [{eunit, "mkdir -p test/eunit"}]}.

{profiles, [
            {doc, [
                   {deps, [
                           {edown, {git, "https://github.com/botsunit/edown.git", {branch, "master"}}}
                          ]},
                   {edoc_opts, [
                                {doclet, edown_doclet}
                                , {app_default, "http://www.erlang.org/doc/man"}
                                , {source_path, ["src"]}
                                , {overview, "overview.edoc"}
                                , {stylesheet, ""}
                                , {image, ""}
                                , {top_level_readme, {"./README.md", "https://github.com/botsunit/poolgirl"}}
                               ]}
                   ]}
           ]}.

